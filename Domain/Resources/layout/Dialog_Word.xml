<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilWord_WordDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:hint="@string/InputWord"
            android:layout_height="@dimen/etxtHeight"
            android:id="@+id/etxtWord_WordDialog"
            android:scrollbars="vertical"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilMeaning_WordDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/etxtHeight"
            android:hint="@string/InputMeaning"
            android:id="@+id/etxtMeaning_WordDialog" 
            android:scrollbars="vertical"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilMemo_WordDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/etxtMemoHeight"
            android:hint="@string/InputMemo"
            android:id="@+id/etxtMemo_WordDialog" 
            android:scrollbars="vertical"/>
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>